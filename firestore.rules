rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all authenticated users (including anonymous) to read and write shared expenses
    // This enables shared family expense tracking while maintaining Firebase security
    match /expenses/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /activity_history/{document} {
      allow read, write: if request.auth != null;
    }
  }
}